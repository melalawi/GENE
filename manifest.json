{
    "manifest_version": 2,

    "name": "GENE",
    "short_name": "GENE",
    "description": "This extension allows for in-text referencing of gene symbols.",
    "version": "1.0",
	
    "background": {
        "scripts": ["./lib/deferred.js", "./lib/background.js", "./lib/chromeBackground.js"],
        "persistent": true
    },

    "web_accessible_resources": ["data/images/loading.gif"],

    "permissions": [
        "activeTab",
        "tabs",
        "http://*/",
        "https://*/"
    ]
}
